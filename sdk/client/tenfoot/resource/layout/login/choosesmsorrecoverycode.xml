<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/wizardstyles.css" />
		<include src="file://{resources}/styles/login/loginhelp.css" />
	</styles>

	<LoginHelpWizardChild class="WizardChild" tabindex="auto" selectionpos="auto" defaultfocus="ButtonNext">
		<Panel class="WizardContent">
		  <Label class="WizardChildDescription" text="#LostAuthenticator_SmsOrRecoveryCode" />

		  <Panel id="RadioButtonContainer">
			  <Panel class="InputContainerDown GapDown">
				  <RadioButton group="OPT" class="Button RadioButton" id="RadioUseReoveryCode" tabindex="0.0" text="#LostAuthenticator_UseRCode" selectionpos="auto" />
			  </Panel>
			  <Panel class="InputContainerDown GapDown">
				  <RadioButton group="OPT" class="Button RadioButton" id="RadioUseSms" tabindex="0.0" text="#LostAuthenticator_UseSms" selectionpos="auto" />
			  </Panel>
		  </Panel>
    </Panel>

		<Panel id="WizardButtons" tabindex="auto" selectionpos="auto">
			<Button class="WizardButton GapRight" id="ButtonNext" onactivate="ChooseSmsOrRecoveryCodeResetTypeWizardChild_Next()">
				<Label id="Label" text="#WizardButton_Next" />
			</Button>
			<Button class="WizardButton GapRight" id="ButtonCancel" onactivate="WizardButtonCancel()">
				<Label id="Label" text="#WizardButton_Cancel" />
			</Button>
		</Panel>

	</LoginHelpWizardChild>

</root>
