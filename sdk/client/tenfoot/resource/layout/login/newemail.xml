<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/wizardstyles.css" />
		<include src="file://{resources}/styles/login/changeemail.css" />
	</styles>

	<NewEmailWizardChild class="WizardChild" tabindex="auto" selectionpos="auto">
		<Panel class="WizardContent">
		  <Label class="WizardChildDescription" text="#ChangeEmail_NewEmail_Description" />
		  <Label class="WizardErrorLabel" id="MessageLabel" />

		  <Panel class="InputContainerDown GapDown">
			  <Label class="WizardLabel" id="PasswordLabel" text="#ChangeEmail_NewEmail_Password" />
			  <TextEntry class="WizardTextEntry" id="PasswordTextEntry"
					  textinputid="InnerNewPasswordTextEntry"
					  textinputdoneactionstring="#ChangeEmail_NextField"
					  textinputhidesuggestions="1"
					  textinputclass="HalfWidth DockRight AppearFromBottomCenter" />
		  </Panel>

		  <Panel class="InputContainerDown GapDown">
			  <Label class="WizardLabel" id="EmailAddressLabel" text="#ChangeEmail_NewEmail_EmailAddress" />
			  <TextEntry class="WizardTextEntry" id="EmailAddressTextEntry"
					  textinputid="InnerNewEmailTextEntry"
					  textinputdoneactionstring="#ChangeEmail_NextField"
					  textinputhidesuggestions="1"
					  textinputclass="HalfWidth DockRight AppearFromBottomCenter" />
		  </Panel>
    </Panel>

		<Panel id="WizardButtons" tabindex="auto" selectionpos="auto">
			<Button class="WizardButton GapRight" id="ButtonNext" onactivate="WizardButtonNext()">
				<Label id="Label" text="#WizardButton_Next" />
			</Button>
			<Button class="WizardButton GapRight" id="ButtonCancel" onactivate="WizardButtonCancel()">
				<Label id="Label" text="#WizardButton_Cancel" />
			</Button>
		</Panel>

	</NewEmailWizardChild>

</root>
